<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        style="@android:style/Widget.DeviceDefault.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:text="New card"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="25dp"
                android:text="Fullname"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Work place"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextWork"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Email"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Mobile"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:ems="10"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Link"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextLink"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:ems="10"
                android:inputType="text" />

            <Button
                android:id="@+id/buttonPic"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Pick picture" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <Button
                android:id="@+id/buttonEditTask"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="12dp"
                android:onClick="createNewTask"
                android:text="Create" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>