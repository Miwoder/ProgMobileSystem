<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserInfo">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:gravity="center"
        android:text="Confirm your data"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="143dp"
        android:layout_height="133dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/nameConfirm"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameConfirm"
        android:layout_width="158dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/surnameConfirm"
        android:layout_width="158dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameConfirm" />

    <TextView
        android:onClick="goToCall"
        android:clickable="true"
        android:id="@+id/phoneConfirm"
        android:layout_width="158dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surnameConfirm" />

    <TextView
        android:id="@+id/emailConfirm"
        android:clickable="true"
        android:onClick="goToMail"
        android:layout_width="158dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneConfirm" />

    <TextView
        android:id="@+id/countryConfirm"
        android:layout_width="158dp"
        android:layout_height="35dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="52dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/emailConfirm"
        app:layout_constraintTop_toBottomOf="@+id/photo" />

    <TextView
        android:id="@+id/cityConfirm"
        android:layout_width="158dp"
        android:layout_height="35dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countryConfirm" />

    <TextView
        android:id="@+id/socialConfirm"
        android:layout_width="158dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="52dp"
        android:clickable="true"
        android:onClick="goToWeb"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/countryConfirm"
        app:layout_constraintTop_toBottomOf="@+id/photo" />


</androidx.constraintlayout.widget.ConstraintLayout>